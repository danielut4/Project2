
<div hidden id="bookid">{{bookId}}</div>
<h1>Your Book: {{title}}</h1>

<select name="categorySelect" id="CategorySelect">
    <option value="" disabled selected>Categories</option>
{{#each notes}}
    <option value="{{note_category}}">{{note_category}}</option>
{{/each}}
</select>

<h4>Notes</h4>
<ul id="noteList">
    {{#each notes}}
        <div class="note">
            <div class="heading">
                {{heading}}
            </div>
            <div class="body">
                {{text}}
            </div>
        </div>
    {{/each}}
</ul>



<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#noteModal">
  Add new note
</button>

<!-- Modal -->
<form id="note-form">
<div class="modal fade" id="noteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">
            <div class="form-group">
            <input type="text" placeholder="Note Heading" id="heading">
            </div>
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <div class="form-group">
            <input type="text" id="notebody" placeholder="Note goes here!">
          </div>
          <div class="form-group">
            <input type="text" id="notecategory" placeholder="Note category!">
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary" id="saveNote">Save changes</button>
      </div>
    </div>
  </div>
</div>
</form>



<script src="../js/bookview.js"></script>