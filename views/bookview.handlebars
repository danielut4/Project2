<h1>Your Book: {{title}}</h1>

<select name="categorySelect" id="CategorySelect">
    <option value="" disabled selected>Categories</option>
{{#each notes}}
    <option value="{{category}}">{{category}}</option>
{{/each}}
</select>

<h4>Notes</h4>
<ul id="noteList">
    
</ul>



<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#basicExampleModal">
  Add new note
</button>

<!-- Modal -->
<form>
<div class="modal fade" id="basicExampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><input type="text" placeholder="Note Heading"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <input type="textarea" id="notebody" placeholder="Note goes here!">
        <input type="textarea" id="notecategory" placeholder="Note category!">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="saveNote">Save changes</button>
      </div>
    </div>
  </div>
</div>
</form>


<script src="../js/bookview.js"></script>